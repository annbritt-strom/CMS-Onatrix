@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutUsSection)Model.Content;
}

<section class="about-section">
    <div class="section-container">
        <div class="about-content-wrapper">
            <div class="about-header">
                <p class="label">@content.AboutLabel</p>
                <div>@Html.Raw(content.AboutHeader)</div>
            </div>
            <div>@Html.Raw(content.AboutText)</div>
            <div>
                @if (content.AboutImg != null)
                {
                    <img src="@content.AboutImg.Url()" />
                }
                <div>
                    @Html.Raw(content.ImgCaption)
                </div>
            </div>
        </div>
    </div>
</section>
