@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AffiliateSection)Model.Content;
}

<section class="affiliate-section">
    <div class="section-container">
        <div class="affiliations-wrapper">
            @foreach (var item in content.AffiliationList)
            {
                var company = item;

                    <partial name="Partials/BlockList/Components/AffiliateCompany" model="company" />

            }
        </div>
    </div>
</section>