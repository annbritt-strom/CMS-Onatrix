@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ContactSection)Model.Content;
    var settings = Model.Settings as ContentModels.ContactSettings;
    var bgColor = settings?.ContactBgSetting;
}

<section class="contact-section" style="--contact-bg:@bgColor">
    <div class="section-container">
        <div class="contact-content-wrapper">
            <div class="contact-left">
                @if (content.ContactImg != null)
                {
                    <div class="contact-image-wrapper">
                        <img src="@content.ContactImg.Url()" />
                    </div>
                }
            </div>
            <div class="contact-right">
                @Html.Raw(content.ContactTitle)
                <div class="contact-list">
                    @foreach (var item in content.ContactList!)
                    {
                        <partial name="Partials/BlockList/Components/Contact" model="item" />
                    }
                </div>
            </div>

        </div>
    </div>
</section>